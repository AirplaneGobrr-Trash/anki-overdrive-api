{
  "name": "anki-overdrive-api",
  "version": "1.0.1-beta.1",
  "description": "API for Anki Overdrive developer interface",
  "author": "Adrian Weber <adrian.weber@msg.group>",
  "license": "MIT",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "tsc -p test && mocha test/unit/**/*.spec.js --require test/index.js --exit",
    "test:e2e": "tsc -p . && mocha test/e2e/**/*spec.js",
    "test:coverage": "nyc npm t",
    "docs": "typedoc --out docs src --mode file && node post-process-docs",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/mocha": "^2.2.46",
    "@types/node": "^8.5.7",
    "@types/sinon": "^4.1.3",
    "@types/sinon-chai": "^2.7.29",
    "chai": "^4.1.2",
    "create-file": "^1.0.1",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "sinon": "^4.2.1",
    "sinon-chai": "^3.0.0",
    "source-map-support": "^0.5.0",
    "testdouble": "^3.3.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "typings": "^1.3.1"
  },
  "dependencies": {
    "@types/noble": "0.0.34",
    "@types/websocket": "0.0.36",
    "@types/ws": "^4.0.0",
    "noble": "^1.8.1",
    "websocket": "^1.0.25"
  },
  "nyc": {
    "exclude": [
      "node_modules/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
